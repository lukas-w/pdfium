declare_args() {
  # Standalone PDFium uses a cutting-edge version of Harfbuzz; most Linux
  # distros do not contain a new enough version of the code to work correctly.
  # However, ChromeOS chroots (i.e, real ChromeOS builds for devices) do contain
  # a new enough version of the library, and so this variable exists so that
  # ChromeOS can build against the system lib and keep binary sizes smaller.
  use_system_harfbuzz = false
}
